        "properties": {
          "_id": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "roles": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "Order": {
        "type": "object",
        "properties": {
          "order_id": {
            "type": "integer"
          },
          "gecom_id": {
            "type": "integer"
          },
          "order_items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/LineItem"
            }
          },
          "order_creation_date": {
            "type": "string",
            "format": "date"
          },
          "customer_id": {
            "type": "integer"
          }
        }
      },
      "LineItem": {
        "type": "object",
        "properties": {
          "product_id": {
            "type": "integer"
          },
          "SKU": {
            "type": "string"
          },
          "quantity": {
            "type": "integer"
          },
          "subtotal": {
            "type": "number"
          },
          "total": {
            "type": "number"
          }
        }
      },
      "ShippingLine": {
        "type": "object",
        "properties": {
          "method_id": {
            "type": "string"
          },
          "method_title": {
            "type": "string"
          },
          "total": {
            "type": "string"
          }
        }
      },
      "PricingRule": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "enabled": {
            "type": "boolean"
          },
          "conditions": {
            "type": "object"
          },
          "actions": {
            "type": "object"
          }
        }
      },
      "Cart": {
        "type": "object",
        "properties": {
          "user_id": {
            "type": "integer"
          },
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CartItem"
            }
          }
        }
      },
      "DiscountedCart": {
        "type": "object",
        "properties": {
          "original_total": {
            "type": "number"
          },
          "discounted_total": {
            "type": "number"
          },
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/DiscountedCartItem"
            }
          }
        }
      },
      "DiscountedCartItem": {
        "type": "object",
        "properties": {
          "SKU": {
            "type": "string"
          },
          "original_price": {
            "type": "number"
          },
          "discounted_price": {
            "type": "number"
          },
          "quantity": {
            "type": "integer"
          }
        }
      }
    },
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "api-key"
      }
    }
  }
