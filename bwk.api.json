  "components": {
    "schemas": {
      "NewOrder": {
        "type": "object",
        "properties": {
          "customer_id": {
            "type": "integer"
          },
          "customer_note": {
            "type": "string"
          },
          "currency": {
            "type": "string"
          },
          "payment_method": {
            "type": "string"
          },
          "payment_method_title": {
            "type": "string"
          },
          "set_paid": {
            "type": "boolean"
          },
          "line_items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/LineItem"
            }
          },
          "shipping_lines": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ShippingLine"
            }
          }
        }
      },
      "WebhookOrder": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "customer_id": {
            "type": "integer"
          },
          "date_created_gmt": {
            "type": "string",
            "format": "date-time"
          },
          "line_items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/LineItem"
            }
          }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "SKU": {
            "type": "string"
          },
          "price_atopems": {
            "type": "number"
          },
          "stock_atopems": {
            "type": "integer"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "username": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "roles": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "CartItem": {
        "type": "object",
        "properties": {
          "SKU": {
            "type": "string"
          },
          "qty": {
            "type": "integer"
          },
          "price_atopems": {
            "type": "number"
          },
          "stock_atopems": {
            "type": "integer"
          }
        }
      },
      "AdminUser": {
