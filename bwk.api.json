    "/atopems/orders/batch": {
      "get": {
        "summary": "Get orders batch",
        "parameters": [
          {
            "in": "query",
            "name": "date",
            "schema": {
              "type": "string"
            },
            "description": "Date to filter orders (YYYY-MM-DD)"
